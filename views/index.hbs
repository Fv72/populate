<div class="container">
    <div class="row">
        <!-- GET -->
        <div class="col-md-3">
            <h1>GET</h1>
            <div class="card">
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        {{#each product}}
                        <li class="list-group-item">{{this.title}}</li>
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>

        <!-- POST -->
        <div class="col-md-3">
            <h1>POST</h1>
            <div class="card">
                <div class="card-body">

                    <form method="POST" action="/">
                        <div class="form-group">
                            <label>Title</label>
                            <input class="form-control" type="text" name="title"></input>
                        </div>
                        <div class="form-group">
                            <label>Content</label>
                            <input class="form-control" type="text" name="content"></input>
                        </div>

                        <div class="form-group">
                            <label>Price</label>
                            <input class="form-control" type="text" name="price"></input>
                        </div>

                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>

                </div>
            </div>
        </div>

        <!-- PUT -->
        <div class="col-md-3">
            <h1>PUT</h1>
            <div class="card">
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        {{#each product}}
                        <li class="list-group-item"><a href="{{this.id}}">{{this.title}}</a></li>
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>


        <!-- DELETE -->
        <div class="col-md-3">
            <h1>DELETE</h1>
            <div class="card">
                <div class="card-body">
                </div>
            </div>
        </div>
    </div>
</div>