<div class="container">
    <div class="row">
        <!-- GET -->
        <div class="col-md-3">
            <h1>GET</h1>
            <div class="card">
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        {{#each product}}

                        <li class="list-group-item">
                            {{this.title}}
                            <span>Source Multer</span>
                            <img src="{{this.cover.path}}" alt="" style="max-width: 200px;">
                            <span>Source Sharp</span>
                            <img src="{{this.cover.urlSharp}}" alt="" style="max-width: 200px;">
                        </li>
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>

        <!-- POST -->
        <div class="col-md-3">
            <h1>POST</h1>
            <div class="card">
                <div class="card-body">

                    <form method="POST" action="/" enctype="multipart/form-data">
                        <div class="form-group">
                            <label>Title</label>
                            <input class="form-control" type="text" name="title"></input>
                        </div>
                        <div class="form-group">
                            <label>Content</label>
                            <input class="form-control" type="text" name="content"></input>
                        </div>

                        <div class="form-group">
                            <label>Price</label>
                            <input class="form-control" type="text" name="price"></input>
                        </div>
                        
                        <div class="form-group">
                            <label for="exampleFormControlSelect1">Category</label>
                            <select name="category" class="form-control" id="exampleFormControlSelect1">
                                {{#each category}}
                                <option value="{{this._id}}">{{this.title}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="form-group">
                            <label>Cover</label>
                            <input class="form-control" type="file" name="cover"></input>
                        </div>


                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>

                </div>
            </div>
        </div>

        <!-- PUT -->
        <div class="col-md-3">
            <h1>PUT</h1>
            <div class="card">
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        {{#each product}}
                        <li class="list-group-item"><a href="{{this.id}}">{{this.title}}</a></li>
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>


        <!-- DELETE -->
        <div class="col-md-3">
            <h1>DELETE</h1>
            <div class="card">
                <div class="card-body">
                    <ul class="list-group list-group-flush">

                        {{#each product}}
                        <li class="list-group-item">
                            {{this.title}}
                            <form action="{{this._id}}/?_method=DELETE" method="post">
                                <button type="submit" class="btn btn-danger btn-sm">Effacer</button>
                            </form>
                        </li>
                        {{/each}}
                    </ul>
                </div>
                <div class="card-body">
                    <form action="/?_method=DELETE" method="POST">
                        <div style="margin-top: 1rem">
                            <button type="submit" class="btn btn-danger btn-sm">Tout effacer</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>